          "phone_number": {
            "type": "string",
            "example": "081384753928"
          },
          "address": {
            "type": "string",
            "example": "Jl. Mejikuhibiniu"
          },
          "photo": {
            "type": "string",
            "format": "binary",
            "example": "url photo"
          },
          "role": {
            "type": "integer",
            "example": "1"
          }
        }
      },
      "Airports": {
        "type": "object",
        "properties": {
          "airport_name": {
