{
  "openapi": "3.0.0",
  "info": {
    "title": "aeroplane-api",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://final-be-project-aeroplane-production.up.railway.app/",
      "description": "production"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Auth API Collection"
    }
  ],
  "paths": {
    "/api/auth/register": {
      "post": {
        "summary": "Register",
        "tags": ["Auth"],
        "description": "Create new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Users"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Registration success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Registrasi berhasil"
                    },
                    "user": {
                      "allOf": [
                        {
                          "$ref": "#/components/schemas/Users"
                        },
                        {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "integer"
                            },
                            "createdAt": {
                              "type": "string",
                              "format": "date-time"
                            },
                            "updatedAt": {
                              "type": "string",
                              "format": "date-time"
                            }
                          }
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Email already registered",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Email telah terdaftar."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "Login",
        "tags": ["Auth"],
        "description": "Retrieve access tokens",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "email": {
                    "type": "email",
                    "example": "zaki@gmail.com"
                  },
                  "password": {
                    "type": "password",
                    "example": "jaki1234"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Login berhasil."
                    },
                    "accessToken": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6MTksIndhcmVob3Vz"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "wrong password",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Password salah."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/verify": {
      "post": {
        "summary": "Verify New User",
        "tags": ["Auth"],
        "description": "Verifikasi new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "token": {
                    "type": "string",
                    "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6MSwiaWF0IjoxNjcxODA5MDUwfQ.QNeu6U5eBAoGu9H8a7Q6aG0_giRqC64tDaX_UlODER8"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success Verifikasi User Baru",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "User berhasil diverifikasi"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/profile": {
      "put": {
        "tags": ["Auth"],
        "summary": "Update User",
        "description": "Change user information",
        "security": [
          {
            "bearerToken": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/Users",
                "type": "object",
                "properties": {
                  "image": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "A successful response.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "message": {
                      "type": "string",
                      "example": "Profil berhasil diperbarui."
                    },
                    "data": {
                      "$ref": "#/components/schemas/Users"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Token tidak valid."
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Users": {
        "type": "object",
        "properties": {
          "firstName": {
            "type": "string",
            "example": "Zaki"
          },
          "lastName": {
            "type": "string",
            "example": "Jaaa"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "zaki@gmail.com"
          },
          "password": {
            "type": "string",
            "format": "password",
            "example": "jaki1234"
          },
          "username": {
            "type": "string",
            "example": "hetotheri"
          },
          "country_code": {
            "type": "string",
            "example": "+62"
          },
          "phone_number": {
            "type": "string",
            "example": "081384753928"
          },
          "address": {
            "type": "string",
            "example": "Jl. Mejikuhibiniu"
          },
          "photo": {
            "type": "string",
            "example": "url photo"
          },
          "role": {
            "type": "integer",
            "example": "1"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerToken": {
        "description": "Insert Token, You can get it after login",
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
