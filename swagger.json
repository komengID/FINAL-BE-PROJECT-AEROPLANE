  "components": {
    "schemas": {
      "Users": {
        "type": "object",
        "properties": {
          "firstName": {
            "type": "string",
            "example": "Zaki"
          },
          "lastName": {
            "type": "string",
            "example": "Jaaa"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "zaki@gmail.com"
          },
          "password": {
